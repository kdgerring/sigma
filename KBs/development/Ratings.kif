;; Description:  This ontology describes different concepts related to Ratings Systems

;; Ontology dependencies for Dining.kif: Merge.kif, Mid-level-ontology.kif


(subclass RatingAttribute SubjectiveAssessmentAttribute)
(documentation RatingAttribute “&%RatingAttribute attempts to quantify the subjective assessment of an &%Object using some scoring system”)

;; if ?RATING is an instance of RatingAttribute, then there exists some agent that underwent some decision-making to come up with that rating
(=>
	(instance ?RATING RatingAttribute)
	(exists (?AGENT ?PROCESS)
		(and
			(instance ?PROCESS Deciding)
			(agent ?PROCESS ?AGENT)
			(result ?PROCESS ?RATING))))

(subclass RestaurantRating RatingAttribute)
(documentation RestaurantRating “&%RestaurantRating is a &%SubjectiveAssessmentAttribute specifically targeted at the overall quality of a &%Restaurant”)

(=>
	(and
		(objectRating ?ENTITY ?RATING ?AGENT ?OBJ)
		(instance ?RATING RestaurantRating))
	(and
		(subclass ?OBJ CommercialAgent)
		(instance ?ENTITY Restaurant)))

(subclass FoodRating RatingAttribute)
(documentation FoodRating "&%FoodRating is a &%SubjectiveAssessmentAttribute specifically targeted the overall quality of &%Food")

;; if a rating is a Food Rating, then the object of the rating is food, and that food was cooked by the agent. 
(=>
	(and
		(objectRating ?ENTITY ?RATING ?AGENT ?OBJ)
		(instance ?RATING FoodRating))
	(subclass ?OBJ PreparedFood)

(subclass ServiceRating RatingAttribute)
(documentation ServiceRating "&%ServiceRating is a &%SubjectiveAssessmentAttribute specifically targeted at the overall quality of &%service given by an agent")

;; if a rating is a Service Rating, then the object of that rating is a ServiceProcess, and that service process was executed by the agent
(=>
	(and
		(serviceRating ?ENTITY ?RATING ?AGENT ?SVC)
		(instance ?RATING ServiceRating))
	(subclass ?SVC ServiceProcess))

(subclass AmbienceRating RatingAttribute)
(documentation AmbienceRating "&%AmbienceRating is a &%SubjectiveAssessmentAttribute specifically targeted at the overall quality of an environment's atmosphere") 

;; if a rating is an AmbienceRating, then the object of that rating is a subclass of AmbienceAttribute
(=>
	(and
		(attributeRating ?ENTITY ?RATING ?AGENT ?ATTR)
		(instance ?RATING AmbienceRating))
	(instance ?ATTR AmbienceAttribute))
