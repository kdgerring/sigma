      (patient ?LAUNDRY ?CLOTHES)
      (instance ?DELIVERY DeliveryService)
      (patient ?DELIVERY ?CLOTHES)
      (destination ?DELIVERY ?LOC)
      (before (WhenFn ?PICKUP) (WhenFn ?LAUNDRY))
      (before (WhenFn ?LAUNDRY) (WhenFn ?DELIVERY)))))
      
